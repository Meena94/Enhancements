<div class="main-wrap">
<div class="home-html">
  <div class="container-fluid">
        <div class="panel-body">
          <form class="form-horizontal">
              <div class="form-group">
                <label class="control-label col-sm-3"><h4>SignIn</h4></label>
              </div><br>
              <div class="">
                <span class = "has-error" style="align:center"><b>{{usererror}}</b></span><br/>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2" for="uname">Username</label>
                <div class="col-sm-4">
                  <input type="text" class="form-control" id="uname" placeholder="Username" ng-model="username"/>
                </div>
                <div ng-show = "username.length >= 15 " >
                  <p ng-class = "{'has-error': username}">Username should not exceed 15 characters</p>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password</label>
                <div class="col-sm-4">
                  <input type="password" class="form-control" id="password" placeholder="Password" ng-model="password"/>
                </div>
                <div ng-show = "password.length < 8 ">
                  <p ng-class = "{'has-error': password}">Password should contain atleast 8 charcters</p>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                  <div class="checkbox">
                    <label class="control-label"><input type="checkbox"><b style="color:#000000;">Remember me</b></label>
                    <label class="control-labbel"><a href="#" style="text-decoration:none;color:#000000;"><b>Forgot Password</b></a></label>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-2">
                  <button type="submit" class="btn btn-info" ng-click="auntheticateLogin()"><b>Submit<b></button>
                </div>
              </div>
          </form>
        </div>
      </div>
    </div>
    <div class="container-fluid">
    <div class="Vlabs">
      <img class="vl" src="images/ValueLabs.png"/>
    </div>
  </div>
  </div>
